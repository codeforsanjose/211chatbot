{
  "type": "object",
  "properties": {
    "uploadsUseS3": {
      "default": false,
      "type": "boolean"
    },
    "uploadsS3Bucket": {
      "default": "bucket-name",
      "type": "string"
    },
    "uploadsS3Region": {
      "default": "eu-west-1",
      "type": "string"
    },
    "uploadsS3AWSAccessKey": {
      "default": "your-aws-key-name",
      "type": "string"
    },
    "uploadsS3AWSAccessSecret": {
      "default": "secret-key",
      "type": "string"
    },
    "startNewConvoOnTimeout": {
      "default": false,
      "type": "boolean"
    },
    "recentConversationLifetime": {
      "default": "6 hours",
      "type": "string"
    },
    "maxMessageLength": {
      "default": 360,
      "type": "number"
    },
    "showBotInfoPage": {
      "default": false,
      "type": "boolean"
    },
    "fileUploadPath": {
      "description": "Destination of file uploads if S3 is not enabled",
      "default": "./uploads",
      "type": "string"
    },
    "infoPage": {
      "description": "The bot information page in the web chat",
      "type": "object",
      "properties": {
        "enabled": {
          "default": false,
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "enabled"
      ]
    },
    "maxMessagesHistory": {
      "description": "The number of messages that are displayed in the chat history",
      "default": 20,
      "type": "number"
    },
    "security": {
      "description": "Security configurations",
      "type": "object",
      "properties": {
        "escapeHTML": {
          "description": "Weather or not to escape plain html payload",
          "default": false,
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "escapeHTML"
      ]
    },
    "chatUserAuthDuration": {
      "description": "The duration of the authentication session when a user authenticate through this channel.",
      "default": "24h",
      "type": "string"
    },
    "extraStylesheet": {
      "description": "Path to an additional stylesheet. It will be applied on top of the default style",
      "type": "string"
    },
    "lazySocket": {
      "description": "If true, Websocket is created when the Webchat is opened. Bot cannot be proactive.",
      "default": false,
      "type": "boolean"
    },
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "chatUserAuthDuration",
    "extraStylesheet",
    "fileUploadPath",
    "infoPage",
    "lazySocket",
    "security",
    "showBotInfoPage"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}

